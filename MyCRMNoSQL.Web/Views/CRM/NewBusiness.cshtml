@{
    ViewData["Title"] = "New Client";
}

@model NewBusinessFormModel

<link rel="stylesheet" href="~/css/CRM/NewBusiness.css" asp-append-version="true" />

<form asp-controller="CRM" asp-action="NewClient">
    <h1 class="new-business-title">Add A New Business</h1>
    <div class="row">
        <div class="col">
            <label asp-for="Name" class="form-label"></label>
            <span asp-validation-for="Name" class="error"></span>
            <input asp-for="Name" class="form-control">
        </div>
        <div class="col-sm-3">
            <label asp-for="StartDate" class="form-label"></label>
            <span asp-validation-for="StartDate" class="error"></span>
            <input type="date" asp-for="StartDate" class="form-control">
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label asp-for="Industry" class="form-label">Industry</label>
            <span asp-validation-for="Industry" class="error"></span>
            <select asp-for="Industry" class="form-control">
                <option value="none" selected disabled hidden>Select</option>
                <option value="Automotive">Automotive</option>
                <option value="Health Care">Health Care</option>
                <option value="Legal">Legal</option>
                <option value="Entertainment">Entertainment</option>
                <option value="Sports">Sports</option>
                <option value="Restaurant">Restaurant</option>
            </select>
        </div>
        <div class="col-8">
            <label asp-for="Website" class="form-label"></label>
            <span asp-validation-for="Website" class="error"></span>
            <input asp-for="Website" class="form-control">
        </div>
    </div>
    <h3>Location</h3>
    <div class="formRow">
        <label asp-for="Street" class="form-label"></label>
        <span asp-validation-for="Street" class="error"></span>
        <input asp-for="Street" class="form-control">
    </div>
    <div class="row">
        <div class="col-sm-5">
            <label asp-for="City" class="form-label"></label>
            <span asp-validation-for="City" class="error"></span>
            <input asp-for="City" class="form-control">
        </div>
        <div class="col-sm-2">
            <label asp-for="State" class="form-label"></label>
            <span asp-validation-for="State" class="error"></span>
            <select asp-for="State" class="form-control">
                <option selected disabled hidden>Select</option>
                <option value="AL">AL</option>
                <option value="AK">AK</option>
                <option value="AR">AR</option>
                <option value="AZ">AZ</option>
                <option value="CA">CA</option>
                <option value="CO">CO</option>
                <option value="CT">CT</option>
                <option value="DC">DC</option>
                <option value="DE">DE</option>
                <option value="FL">FL</option>
                <option value="GA">GA</option>
                <option value="HI">HI</option>
                <option value="IA">IA</option>
                <option value="ID">ID</option>
                <option value="IL">IL</option>
                <option value="IN">IN</option>
                <option value="KS">KS</option>
                <option value="KY">KY</option>
                <option value="LA">LA</option>
                <option value="MA">MA</option>
                <option value="MD">MD</option>
                <option value="ME">ME</option>
                <option value="MI">MI</option>
                <option value="MN">MN</option>
                <option value="MO">MO</option>
                <option value="MS">MS</option>
                <option value="MT">MT</option>
                <option value="NC">NC</option>
                <option value="NE">NE</option>
                <option value="NH">NH</option>
                <option value="NJ">NJ</option>
                <option value="NM">NM</option>
                <option value="NV">NV</option>
                <option value="NY">NY</option>
                <option value="ND">ND</option>
                <option value="OH">OH</option>
                <option value="OK">OK</option>
                <option value="OR">OR</option>
                <option value="PA">PA</option>
                <option value="RI">RI</option>
                <option value="SC">SC</option>
                <option value="SD">SD</option>
                <option value="TN">TN</option>
                <option value="TX">TX</option>
                <option value="UT">UT</option>
                <option value="VT">VT</option>
                <option value="VA">VA</option>
                <option value="WA">WA</option>
                <option value="WI">WI</option>
                <option value="WV">WV</option>
                <option value="WY">WY</option>
            </select>
        </div>
        <div class="col-sm-3">
            <label asp-for="ZipCode" class="form-label"></label>
            <span asp-validation-for="ZipCode" class="error"></span>
            <input asp-for="ZipCode" class="form-control">
        </div>
    </div>
    <h3 class="STitle">Point of Contact</h3>
    <div class="row">
        <div class="col-2">
            <label asp-for="Position" class="form-label"></label>
            <span asp-validation-for="Position" class="error"></span>
            <select asp-for="Position" class="form-control">
                <option value="none" selected disabled hidden>Select</option>
                <option value="Owner">Owner</option>
                <option value="Gate Keeper">Gate Keeper</option>
                <option value="Marketing">Marketing</option>
                <option value="Other">Other</option>
            </select>
        </div>
        <div class="col-5">
            <label asp-for="FirstName" class="form-label"></label>
            <span asp-validation-for="FirstName" class="error"></span>
            <input asp-for="FirstName" class="form-control">
        </div>
        <div class="col-5">
            <label asp-for="LastName" class="form-label"></label>
            <span asp-validation-for="LastName" class="error"></span>
            <input asp-for="LastName" class="form-control">
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <span asp-validation-for="PhoneNumber" class="error"></span>
            <input asp-for="PhoneNumber" class="form-control">
        </div>
        <div class="col-6">
            <label asp-for="Email" class="form-label"></label>
            <span asp-validation-for="Email" class="error"></span>
            <input asp-for="Email" class="form-control">
        </div>
    </div>
    <div class="submit">
        <button type="submit" class="btn btn-outline-success">Add Business</button>
    </div>
</form>