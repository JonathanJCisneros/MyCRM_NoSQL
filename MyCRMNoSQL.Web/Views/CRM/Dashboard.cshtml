@{
    ViewData["Title"] = "Dashboard";
}

@model List<Business>

<div class="container">
    <h1>Successful</h1>
    <a asp-controller="CRM" asp-action="New" class="btn btn-outline-primary">Add Business</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col" class="thead">Business Name</th>
                <th scope="col" class="thead">Point of Contact</th>
                <th scope="col" class="thead">Last Activity</th>
                <th scope="col" class="thead">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count > 0)
            {  
                @foreach (Business b in Model)
                {
                    <tr>
                        <td class="tbody"><span class="tdata"><p class="BName">@b.Name</p></span></td>
                        <td class="tbody">@b.PointOfContact.FirstName @b.PointOfContact.LastName</td>
                        @if (@b.LatestActivity.Type != null)
                        {
                            <td class="tbody">
                                <div class="tActivity">
                                    @if (b.LatestActivity.Type == "Phone Call")
                                    {
                                        <div class="img">
                                            <img src="~/images/Activity/PhoneCall.svg" alt="ai" id="img">
                                        </div>
                                    }
                                        @if (b.LatestActivity.Type == "Email")
                                    {
                                        <div class="img">
                                            <img src="~/images/Activity/Email.svg" alt="ai" id="img">
                                        </div>
                                    }
                                        @if (b.LatestActivity.Type == "Presentation")
                                    {
                                        <div class="img">
                                            <img src="~/images/Activity/Presentation.png" alt="ai" id="img">
                                        </div>
                                    }
                                    <p class="lastA">@b.LatestActivity.CreatedDate.ToString("MM/d @ h:mm tt")</p>
                                </div>
                            </td>
                        }
                        else
                        {
                            <td class="tbody">No activity yet</td>
                        }
                        <td class="actions" >
                            <div>
                                <a asp-controller="CRM" asp-action="View"  asp-route-businessId=@b.BusinessId class="btn btn-outline-primary">View</a>
                                <span></span>
                                <a asp-controller="CRM" asp-action="Delete"  asp-route-businessId="@b.BusinessId" class="btn btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td><h4>You currently have no clients, go add one!</h4></td>
                </tr>                                
            }
        </tbody>
    </table>
</div>
