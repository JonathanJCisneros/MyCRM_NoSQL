@model Purchase

<form asp-controller="CRM" asp-action="AddPurchase" asp-route-businessId="@ViewBag.oneBusiness.BusinessId" method="POST">
    <div>
        <h1>Let's get Started!</h1>
    </div>
    <div class="row">
        <div class="col-5">
            <label asp-for="ProductId" class="form-label"></label>
            <span asp-validation-for="ProductId"></span>
            <select asp-for="ProductId" class="form-control">
                <option disabled selected>Select</option>
                @foreach (Product p in ViewBag.Products)
                {
                    <option value="@p.ProductId">@p.Name</option>
                }
            </select>
        </div>
        <div class="col">
            <label asp-for="AddressId" class="form-label"></label>
            <span asp-validation-for="AddressId"></span>
            <select asp-for="AddressId" class="form-control">
                <option disabled selected>Select</option>
                @foreach (Address a in ViewBag.Business.AddressList)
                {
                    <option value="@a.AddressId">
                        <p>@a.Street</p>
                        <p>@a.City, @a.State @a.ZipCode</p>
                    </option>
                }
            </select>
        </div>
    </div>
